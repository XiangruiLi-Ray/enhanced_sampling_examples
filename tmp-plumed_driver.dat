# Temporary file used to convert an opes KERNELS file into a STATE file
# vim:ft=plumed
UNITS NATURAL
RESTART
f: FIXEDATOM AT=0,0,0
d: DISTANCE ATOMS=f,f
COMMITTOR ARG=d BASIN_LL1=-1 BASIN_UL1=1
phi: COMBINE ARG=d PERIODIC=-pi,pi
psi: COMBINE ARG=d PERIODIC=-pi,pi
opes: OPES_METAD ARG=phi,psi FILE=results/opes_50_500_0.15.data STATE_WFILE=results/opes/STATE BIASFACTOR=20.04539375634014 EPSILON=6.875408358747016e-10 KERNEL_CUTOFF=6.495829414403654 COMPRESSION_THRESHOLD=1 TEMP=1 PACE=1 BARRIER=1 SIGMA=1,1